<p id="notice"><%= notice %></p>

<h1>Boats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Containers</th>
      <th>Location</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @boats.each do |boat| %>
      <tr>
        <td><%= boat.name %></td>
        <td><%= boat.containers %></td>
        <td><%= boat.location %></td>
        <li class="jobTab"><%= link_to 'Show', boat %></li>
        <li class="jobTab"><%= link_to 'Edit', edit_boat_path(boat) %></li>
        <li class="jobTab"><%= link_to 'Destroy', boat, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="newBtn">
  <%= link_to 'New Boat', new_boat_path %>
</div>
