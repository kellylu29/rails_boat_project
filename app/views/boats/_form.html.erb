      <h2><%= pluralize(boat.errors.count, "error") %> prohibited this boat from being saved:</h2>

      <ul>
      <% @boat.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %> <br>
    <%= form.text_field :name, id: :boat_name %>
  </div>

  <div class="field">
    <%= form.label :containers %> <br>
    <%= form.number_field :containers, id: :boat_containers %>
  </div>

  <div class="field">
    <%= form.label :location %> <br>
    <%= form.select :location, ['California', 'Florida', 'Louisiana', 'Maryland', 'North Carolina', 'New Jersey', 'New York', 'Pennsylvania', 'South Carolina', 'Texas', 'Washington'] %>
  </div>

  <div class="image_field">
    <%= form.label :image %> <br>
    <%= form.file_field :image, :class => "image_button" %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Boat', :class => 'submit_button' %>
  </div>
<% end %>
