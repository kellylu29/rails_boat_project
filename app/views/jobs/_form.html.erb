      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %> <br>
    <%= form.text_field :name, id: :job_name %>
  </div>

  <div class="field">
    <%= form.label :description %> <br>
    <%= form.text_area :description, id: :job_description %>
  </div>

  <div class="field">
    <%= form.label :origin %> <br>
    <%= form.select :origin, ['California', 'Florida', 'Louisiana', 'Maryland', 'North Carolina', 'New Jersey', 'New York', 'Pennsylvania', 'South Carolina', 'Texas', 'Washington'] %>
  </div>

  <div class="field">
    <%= form.label :destination %> <br>
    <%= form.select :destination, ['California', 'Florida', 'Louisiana', 'Maryland', 'North Carolina', 'New Jersey', 'New York', 'Pennsylvania', 'South Carolina', 'Texas', 'Washington'] %>
  </div>

  <div class="field">
    <%= form.label :cost %> <br>
    <%= form.number_field :cost, id: :job_cost %>
  </div>

  <div class="field">
    <%= form.label :containers %> <br>
    <%= form.number_field :containers, id: :job_containers %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Job', :class => 'submit_button'%>
  </div>
<% end %>
