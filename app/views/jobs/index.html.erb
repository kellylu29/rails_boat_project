<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Cost</th>
      <th>Containers</th>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.description %></td>
        <td><%= job.origin %></td>
        <td><%= job.destination %></td>
        <td><%= job.cost %></td>
        <td><%= job.containers %></td>
        <li class="jobTab"><%= link_to 'Show', job %></li>
        <li class="jobTab"><%= link_to 'Edit', edit_job_path(job) %></li>
        <li class="jobTab"><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="newBtn">
  <%= link_to 'New Job', new_job_path %>
</div>
